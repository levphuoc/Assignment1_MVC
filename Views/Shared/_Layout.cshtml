 @using Assignment1_MVC.Extensions
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - FUNewsManagementSystem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "News")">FUNews</a>
            <div class="navbar-nav">
                @if (HttpContextAccessor.HttpContext?.Session?.GetInt32("AccountID") != null)
                {
                    <a class="nav-link" href="@Url.Action("Index", "News")"><i class="fas fa-newspaper"></i> News</a>
                    @if (HttpContextAccessor.HttpContext?.Session?.GetInt32("AccountRole") == 1)
                    {
                        <a class="nav-link" href="@Url.Action("History", "News")"><i class="fas fa-clock"></i> My History</a>
                    }
                    @if (HttpContextAccessor.HttpContext?.Session?.GetInt32("AccountRole") == 0)
                    {
                        <a class="nav-link" href="@Url.Action("ManageAccounts", "Account")"><i class="fas fa-users"></i> Manage Accounts</a>
                        <a class="nav-link" href="@Url.Action("Index", "Report")"><i class="fas fa-chart-bar"></i> Reports</a>
                    }
                    <a class="nav-link" href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out-alt"></i> Logout</a>
                }
            </div>
        </div>
    </nav>
    <div class="container mt-3">
        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>